{
    "name": "@matrix-org/matrix-wysiwyg",
    "version": "2.37.8",
    "type": "module",
    "description": "Wysiwyg composer for matrix.org using React",
    "author": "matrix.org",
    "repository": {
        "type": "git",
        "url": "https://github.com/matrix-org/matrix-wysiwyg"
    },
    "license": "Apache-2.0",
    "main": "./dist/matrix-wysiwyg.umd.cjs",
    "module": "./dist/matrix-wysiwyg.js",
    "exports": {
        ".": {
            "import": "./dist/matrix-wysiwyg.js",
            "require": "./dist/matrix-wysiwyg.umd.cjs"
        }
    },
    "files": [
        "CHANGELOG.md",
        "README.md",
        "dist",
        "package.json"
    ],
    "types": "./dist/index.d.ts",
    "scripts": {
        "dev": "vite",
        "build": "vite build && node scripts/hack_myfetch.js && node scripts/hack_exports.js",
        "build:demo": "vite build -c vite.demo.config.ts",
        "preview": "vite preview",
        "typecheck": "tsc --noEmit",
        "lint": "eslint .",
        "test": "vitest --run --pool=forks",
        "test:cypress": "cypress run",
        "test:cypress:open": "cypress open",
        "test:watch": "vitest --pool=forks",
        "test:ui": "vitest --ui",
        "coverage": "vitest run --coverage --pool=forks",
        "update": "cd ../../bindings/wysiwyg-wasm && npm run build && cp -f ./pkg/*wysiwyg* ../../platforms/web/generated && cd ../../platforms/web && yarn build"
    },
    "peerDependencies": {
        "react": "^18.2.0"
    },
    "devDependencies": {
        "@testing-library/dom": "^10.0.0",
        "@testing-library/jest-dom": "^6.0.0",
        "@testing-library/react": "^16.0.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/jest": "^29.1.1",
        "@types/react": "^18.0.17",
        "@types/react-dom": "^18.0.6",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "@vitejs/plugin-react": "^4.2.1",
        "@vitest/coverage-c8": "^0.33.0",
        "@vitest/coverage-v8": "^2.0.0",
        "@vitest/ui": "^2.0.0",
        "cypress": "^13.0.0",
        "eslint": "^9.0.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-deprecate": "^0.8.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.6.1",
        "eslint-plugin-matrix-org": "^1.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-react": "^7.31.8",
        "eslint-plugin-react-hooks": "^4.6.0",
        "jest-environment-jsdom": "^29.0.3",
        "prettier": "3.3.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "replace": "^1.2.1",
        "typescript": "^5.0.0",
        "vite": "^5.0.0",
        "vite-plugin-dts": "^4.0.0",
        "vitest": "^2.0.0",
        "vitest-sonar-reporter": "^2.0.0"
    },
    "dependencies": {
        "eslint-plugin-unicorn": "^55.0.0"
    }
}
